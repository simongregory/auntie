#!/usr/bin/env ruby
require 'bbc'

if ARGV[0] == 'help' && ARGV[1] == '-c'
  puts "hourly"
  puts "daily"
  puts "area"
  exit
end

if ['help', '-h', '--help'].include? ARGV[0]
  puts 'Useage: weather <Postcode or BBC location id>'
  exit
end

if ARGV[0] == 'loc'

end

location = ARGV[0] ||= '2643743' #'2643743' #Default to London. UK postcodes also work

